{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "shortDescription": {
      "type": "string"
    },
    "description": {
      "type": "richtext"
    },
    "price": {
      "type": "decimal"
    },
    "sku": {
      "type": "string"
    },
    "stock": {
      "type": "integer"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "rating": {
      "type": "decimal"
    },
    "variants": {
      "type": "component",
      "component": "product.variant",
      "repeatable": true
    },
    "specifications": {
      "type": "component",
      "component": "product.specification",
      "repeatable": true
    },
    "reviews": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::review.review",
      "mappedBy": "product"
    }
  }
}
