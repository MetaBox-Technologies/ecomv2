{
  "kind": "singleType",
  "collectionName": "category_pages",
  "info": {
    "singularName": "category-page",
    "pluralName": "category-pages",
    "displayName": "Category Page"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
