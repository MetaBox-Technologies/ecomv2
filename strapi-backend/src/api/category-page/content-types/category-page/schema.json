      "type": "string"
    },
    "heroBanner": {
      "type": "component",
      "component": "category.hero",
      "repeatable": false
    },
    "layout": {
      "type": "enumeration",
      "enum": [
        "Grid",
        "List"
      ]
    },
    "column": {
      "type": "enumeration",
      "enum": [
        "item2",
        "item3",
        "item4"
      ]
    },
    "sections": {
      "type": "dynamiczone",
      "components": [
        "shared.image-carousel",
        "homepage.featured-products",
        "homepage.promo-banner"
      ]
    }
  }
}
