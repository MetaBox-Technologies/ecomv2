{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "orderNumber": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "users_permissions_user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "orders"
    },
    "guestEmail": {
      "type": "string",
      "required": true
    },
    "items": {
      "type": "component",
      "component": "order.item",
      "repeatable": true
    },
    "subtotal": {
      "type": "decimal"
    },
    "shippingCost": {
      "type": "decimal"
    },
    "tax": {
      "type": "decimal"
    },
    "total": {
      "type": "decimal"
    },
    "Ostatus": {
      "type": "enumeration",
      "default": "Pending",
      "enum": [
        "Pending",
        "Paid",
        "Processing",
        "Shipped",
        "Delivered",
        "Cancelled",
        "Refunded"
      ]
    },
    "paymentMethod": {
      "type": "enumeration",
      "enum": [
        "Card",
        "Paypal",
        "Stripe",
        "Cod",
        "Bank_Transfer"
      ]
    },
    "paymentStatus": {
      "type": "enumeration",
      "enum": [
        "Pending",
        "Paid",
        "Failed",
        "Refunded"
      ]
    },
    "shippingAddress": {
      "type": "component",
      "component": "shared.address",
      "repeatable": false
    },
    "billingAddress": {
      "type": "component",
      "component": "shared.address",
      "repeatable": false
    },
    "notes": {
      "type": "string"
    },
    "orderCreatedAt": {
      "type": "datetime"
    }
  }
}
